  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebSocket Client</title>
  </head>
  <body>
    <h1>WebSocket Client</h1>
    <div>
      <h2>Send stop app</h2>
      <button id="btnStopApp">StopApp</button>
    </div>
    <div id="messages"></div>
    <script>
      // Kết nối đến WebSocket server
      //socket = new WebSocket("wss://server-8lea.onrender.com");
      socket = new WebSocket("ws://localhost:8080");
      // Khi kết nối WebSocket được mở
      socket.addEventListener('open', () => {
        console.log('Connected to the server');
      });

      // Khi nhận được tin nhắn từ server
      socket.addEventListener('message', (event) => {
        const messagesDiv = document.getElementById('messages');
        const message = document.createElement('p');
        message.textContent = `Received: ${event.data}`;
        messagesDiv.appendChild(message);
      });
      // Khi WebSocket đóng kết nối
      socket.addEventListener('close', () => {
        console.log('Disconnected from server');
      });
      // stop app 
      document.getElementById('btnStopApp').addEventListener('click', () => {
        const message = JSON.stringify({ type: 'stopApp' });
        socket.send(message);
        console.log(`Sent: ${message}`);
      });
    </script>
  </body>
  </html>

